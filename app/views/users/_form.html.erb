

<div class="well">
<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
	 
	 <% if(@user.errors.any?) %>
		<div class="alert alert-danger"><%= t('general.contain_errors') %></div>
	 <% end %>
	 <div class="form-group">
		<%= f.label :full_name, class: "col-lg-2 control-label" %>
		<div class="col-lg-5">
		  <%= f.text_field :full_name, class: "form-control" %>		 
    	</div>
    	<%= error_tag @user, :full_name %>
    </div>
  		
  	 	<div class="form-group">
  	    <%= f.label :location, class: "col-lg-2 control-label" %>
  	   	<div class="col-lg-5">
  	   		<%= f.text_field :location, class: "form-control" %>
  	   	</div>
  	   	<%= error_tag @user, :location %>
 			</div>

	   <div class="form-group">
	   	 <%= f.label :email, class: "col-lg-2 control-label" %>
	   	 	<div class="col-lg-5">
	   	  	<%= f.text_field :email, class: "form-control" %>
	   	  </div>
	   	  <%= error_tag @user, :email %>                                 		
  	 </div>

		 <div class="form-group">
			 <%= f.label :password, class: "col-lg-2 control-label" %>
			 <div class="col-lg-5">
			 	<%= f.password_field :password, class: "form-control" %>
			 </div>
			 <%= error_tag @user, :password %>
			 <%= error_tag @user, :password_digest %>                                  
		 </div>

		 <div class="form-group">
			 <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
			 <div class="col-lg-5">
			 	<%= f.password_field :password_confirmation, class: "form-control" %>
			 </div>
			 <%= error_tag @user, :password_digest %>                               
     </div>

  	 <div class="form-group">
  	  <%= f.label :bio, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
			<%= f.text_area :bio, rows: 5, class: "form-control" %>
  	  </div>
  	  <%= error_tag @user, :bio %>
  	</div>
	<%= f.submit nil, class: "btn btn-success" %>
  
<% end %>

</div>