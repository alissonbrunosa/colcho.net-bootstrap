
<div class="well" >
<%= form_for(@room, html: {class: "form-horizontal"}) do |f| %>

  <% if(@room.errors.any?) %>
	 <div class="alert alert-danger"><%= t('general.contain_errors') %></div>
  <% end %>

  <div class="form-group">
	<%= f.label :title, class: "col-lg-2 control-label" %>
		<div class="col-lg-5">
  			<%= f.text_field :title, class: "form-control" %>		 
    	</div>
   <%= error_tag @room, :title %>
  </div>
  
  <div class="form-group">
	<%= f.label :location, class: "col-lg-2 control-label" %>
		<div class="col-lg-5">
  			<%= f.text_field :location, class: "form-control" %>		 
    	</div>
   <%= error_tag @room, :location %>
  </div>
  
  <div class="form-group">
	<%= f.label :description, class: "col-lg-2 control-label" %>
		<div class="col-lg-5">
  			<%= f.text_area :description, rows: 5, class: "form-control" %>		 
    	</div>
   <%= error_tag @room, :description %>
  </div>

  <div class="form-group">
    <%= f.label :picture, class: "col-lg-2 control-label" %>
    <div class="col-lg-5">
      <%= f.file_field :picture, class: "form-control" %>
    </div>
    <%= error_tag @room, :picture %>
  </div>
  
  <div class="actions">
    <%= f.submit nil, class: "btn btn-success" %>
  </div>
<% end %>
</div>